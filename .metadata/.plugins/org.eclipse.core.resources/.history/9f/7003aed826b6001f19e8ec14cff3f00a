package br.com.treinamento.pedidos.dto;

import java.time.LocalDateTime;
import java.time.ZoneId;
import java.time.ZonedDateTime;

import br.com.treinamento.pedidos.model.Produto;
import lombok.AllArgsConstructor;
import lombok.Getter;
import lombok.NoArgsConstructor;

@AllArgsConstructor
@NoArgsConstructor
@Getter
public class ProdutoListagem {
	
	private Long id;
	private String nome;
	private String descricao;
	private ZonedDateTime data;
	
	public ProdutoListagem(Produto produto) {
		this.id = produto.getId();
		this.nome = produto.getNome();
		this.descricao = produto.getDescricao();
		LocalDateTime dataDTO = produto.getData();
		this.data = dataDTO.atZone(ZoneId.of("America/Sao_Paulo")).withZoneSameInstant(ZoneId.of("UTC"));
	}
}

